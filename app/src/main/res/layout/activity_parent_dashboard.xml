<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:text="@string/parent_dashboard_title"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- Team Name -->
        <TextView
            android:id="@+id/textTeamName"
            android:text="@string/team_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Action Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <Button
                android:id="@+id/buttonCreateTeam"
                android:layout_weight="1"
                android:text="@string/create_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonJoinTeam"
                android:layout_weight="1"
                android:text="@string/join_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonAddToTeam"
                android:layout_weight="1"
                android:text="@string/add_to_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Children Levels -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/children_levels"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layoutChildrenLevels"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Date Filter -->
        <Button
            android:id="@+id/buttonDatePicker"
            android:text="@string/select_date"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonClearDate"
            android:text="@string/clear_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Chores List -->
        <TextView
            android:text="@string/upcoming_chores"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/layoutChoreList"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Navigation Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonGoDashboard"
                android:layout_weight="1"
                android:text="@string/nav_dashboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonGoAddChore"
                android:layout_weight="1"
                android:text="@string/nav_add_chore"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonGoRewards"
                android:layout_weight="1"
                android:text="@string/nav_rewards"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonLogout"
                android:layout_weight="1"
                android:text="@string/nav_log_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
