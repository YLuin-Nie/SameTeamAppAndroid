<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When checked (dark mode) - show moon -->
    <item android:state_checked="true">
        <layer-list>
            <item android:left="7dp" android:top="23dp" android:right="25dp" android:bottom="25dp">
                <bitmap
                    android:src="@drawable/moon"
                    android:gravity="center" />
            </item>
        </layer-list>
    </item>

    <!-- Default (unchecked - light mode) - show sun -->
    <item>
        <layer-list>
            <item android:left="20dp" android:top="23dp" android:right="7dp" android:bottom="20dp">
                <bitmap
                    android:src="@drawable/sun"
                    android:gravity="center" />
            </item>
        </layer-list>
    </item>

</selector>
